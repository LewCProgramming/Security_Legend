class Character():
    def __init__(self, name, HP, ATK, DODGE, CRIT):
        self.name = name
        self.HP = HP
        self.ATK = ATK
        self.DODGE = DODGE
        self.CRIT = CRIT

    def healUp(self, any_heal):
        self.HP += any_heal

    def takeDamage(self, any_damage):
        self.HP -= any_damage
        print(f'{self.name} the {character_class} took' + str(any_damage) + ' points of damage!\n')
        print(f'{self.name}\'s HP is now ' + str(self.HP))
        
    def dealDamage(self, enemy):
        if (self.ATK - enemy.DEF) > 0:
            enemy.HP -= (self.ATK - enemy.DEF)
        else:
            enemy.HP = enemy.HP

    def showStats(self):
        print(self.name + '\'s stats: ')
        print("HP: " + str(self.HP))
        print("DEF: " + str(self.DEF))
        print("ATK: " + str(self.ATK))

