def battlePrompt(prompt):
    answers = ['Help', 'Stats', 'Quit', 'Fight', 'First Aid', 'Evade']
    prompt_answer = input(prompt + '\n')
    while prompt_answer.capitalize() not in answers:
        print('Invalid response. Type \'help\' for valid responses.')
        prompt_answer = input(prompt + '\n')
    if prompt_answer.lower() == 'stats':
        player_character.showStats()
    elif prompt_answer.lower() == 'help':
        print('Valid responses are: ' + ' '.join(answers))
    elif prompt_answer.lower() == 'quit':
        print('Exiting TheBadZorkClone.com')
        quit()
    elif prompt_answer.lower() == 'fight':
        print('Entering fighting mode!')
    elif prompt_answer.lower() == 'flee':
        print('You wimp. Fine, flee then...')
    elif prompt_answer.lower() == 'consume':
        if fruit > 0:
            print('You consume a fruit.')
